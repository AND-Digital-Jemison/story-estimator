{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2015",
    "moduleResolution": "node"
  },
  "exclude": [
    "**/node_modules/*", "**/dist/*", "scripts/*", "./node_modules",
    "../../node_modules/*", "./dist/*",
    "**/*.test.ts", "**/*.spec.ts", "**/*.dev.ts", "node_modules","./test/*",
    "node_modules",
    "dist",
    "test",
    "**/*spec.ts",
    "**/*dev.ts",
    "**/*test.ts",
    "src/client"
  ]
}
